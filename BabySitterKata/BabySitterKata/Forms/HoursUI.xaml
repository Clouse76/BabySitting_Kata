        <Label Name="lblTotalHours" Content="0" HorizontalAlignment="Left" Margin="267,299,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rbBedPM" Content="PM" HorizontalAlignment="Left" Margin="197,122,0,0" VerticalAlignment="Top" GroupName="AMorPMBed" IsChecked="True" TabIndex="102"/>
        <RadioButton x:Name="rbBedAM" Content="AM" HorizontalAlignment="Left" Margin="235,122,0,0" VerticalAlignment="Top" GroupName="AMorPMBed" TabIndex="103"/>
        <Label x:Name="lblstandardPay" Content="0" HorizontalAlignment="Left" Margin="334,206,0,0" VerticalAlignment="Top" ContentStringFormat="C"/>
